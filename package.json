{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "postinstall": "remix setup node && husky install",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "validate": "pnpm lint --quiet"
  },
  "dependencies": {
    "@hookform/devtools": "^4.0.2",
    "@hookform/resolvers": "^2.8.8",
    "@mantine/core": "3.6.2",
    "@mantine/dates": "^3.6.2",
    "@mantine/hooks": "3.6.2",
    "@modulz/radix-icons": "^4.0.0",
    "@prisma/client": "^3.9.2",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "@remix-run/server-runtime": "^1.1.3",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.10.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.27.1",
    "remix": "^1.1.1",
    "remix-auth": "^3.2.1",
    "remix-auth-form": "^1.1.1",
    "resolvers": "link:@hookform/resolvers",
    "zod": "^3.13.4",
    "zustand": "^3.7.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-config-kentcdodds": "^20.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "prisma": "^3.9.2",
    "stylelint": "^14.2.0",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "server-build",
    "build",
    "public/build",
    "*.ignored/",
    "*.ignored.*"
  ]
}
